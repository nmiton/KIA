<form method="post" action="{{ path('app_animal_delete', {'id': animal.id}) }}" onsubmit="return confirm('Voulez-vous supprimez cet animal?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ animal.id) }}">
    <div class="text-center">
        <button class="btn">Supprimer</button>
    </div>
</form>
