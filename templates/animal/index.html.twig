{% extends 'base.html.twig' %}

{% block title %}Liste des animaux{% endblock %}

{% block body %}
    <h1>Liste des animaux</h1>

    <table class="table">
        <thead>
            <tr>
                {# <th>Id</th> #}
                <th>Nom</th>
                <th>En vie</th>
                <th>Dernière activité</th>
                <th>Date de naissance</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for animal in animals %}
            <tr>
                {# <td>{{ animal.id }}</td> #}
                <td>{{ animal.name }}</td>
                <td>{{ animal.isAlive ? 'Oui' : 'Non' }}</td>
                <td>{{ animal.lastActive ? animal.lastActive|date('d/m/Y H:i:s') : '' }}</td>
                <td>{{ animal.createdAt ? animal.createdAt|date('d/m/Y') : '' }}</td>
                <td>
                    <a href="{{ path('app_animal_show', {'id': animal.id}) }}">Voir</a>
                    <a href="{{ path('app_animal_edit', {'id': animal.id}) }}">Éditer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucun animal trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_animal_new') }}">Créer nouvel animal</a>
{% endblock %}
