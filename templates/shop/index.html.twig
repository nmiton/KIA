{% extends 'base.html.twig' %}

{% block title %}Magasin{% endblock %}
{% block main_id %}magasin{% endblock %}

{% block body %}
    <h1 class="h3 mb-3 font-weight-normal">Magasin : </h1>
    <p class="mt-3"> En ce lieu vous pouvez acheter tous les objets que désire votre adorable meilleur ami mais attention cela coute cher!
{% if items == [] %}
{% elseif items is null %}

    <table class="table table-striped mt-3">
        <thead>
            <th scope="col">Objet</th>
            <th scope="col">Description</th>
            <th scope="col">Conséquences</th>
            <th scope="col">Prix</th>
            <th scope="col">Acheter</th>
        </thead>
        <tbody>
            <tr>
                <td data-label="Place" colspan="5">Aïe, il semblerait que le magasin a été dévalisé</td>
            </tr>
        <tbody>
    </table>  
</div>
{% else %}

    <table class="table table-striped mt-3">
        <thead>
            <th scope="col">Objet</th>
            <th scope="col">Description</th>
            <th scope="col">Conséquences</th>
            <th scope="col">Prix</th>
            <th scope="col">Acheter</th>
        </thead>
        <tbody>
            {% for item in items %}
            <tr>
                <td data-label="Objet">{{item.name}}</td>
                <td data-label="Description">{{item.description}}</td>
                <td data-label="Conséquences">TODO</td>
                <td data-label="Prix">{{item.price}}$$</td>
                <td data-label=""><a href="#">Acheter</a></td>
            </tr>
            {% endfor %}
        <tbody>
    </table>  
</div>
{% endif %}
{% endblock %}
