{% extends 'base.html.twig' %}

{% block title %}Réinitialiser son mot de passe{% endblock %}
{% block main_id %}resetPassword{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1 class="h3 mb-3 font-weight-normal">Réinitialiser son mot de passe :</h1>
    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <p>Entrez votre adresse email pour recevoir le email de réinitialisation de mot de passe.</p>
        <div class="text-center">
            <button class="btn" type="submit">Envoyer un email pour réinitialiser son mot de passe</button>
        </div>
    {{ form_end(requestForm) }}
{% endblock %}
